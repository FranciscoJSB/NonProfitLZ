{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "primarySubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for the primary resource group."
      }
    },
    "primaryResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the primary resource group to be created."
      }
    },
    "primaryLocation": {
      "type": "string",
      "metadata": {
        "description": "Location for the primary resource group."
      }
    },
    "secondarySubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for the secondary resource group."
      }
    },
    "secondaryResourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "Name of the secondary resource group to be created."
      }
    },
    "secondaryLocation": {
      "type": "string",
      "metadata": {
        "description": "Location for the secondary resource group."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "primaryResourceGroupDeployment",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Resources/resourceGroups",
              "apiVersion": "2021-04-01",
              "location": "[parameters('primaryLocation')]",
              "name": "[parameters('primaryResourceGroupName')]",
              "properties": {}
            }
          ]
        },
        "subscriptionId": "[parameters('primarySubscriptionId')]"
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "secondaryResourceGroupDeployment",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Resources/resourceGroups",
              "apiVersion": "2021-04-01",
              "location": "[parameters('secondaryLocation')]",
              "name": "[parameters('secondaryResourceGroupName')]",
              "properties": {}
            }
          ]
        },
        "subscriptionId": "[parameters('secondarySubscriptionId')]"
      }
    }
  ],
  "outputs": {
    "primaryResourceGroupName": {
      "type": "string",
      "value": "[parameters('primaryResourceGroupName')]"
    },
    "secondaryResourceGroupName": {
      "type": "string",
      "value": "[parameters('secondaryResourceGroupName')]"
    }
  }
}
