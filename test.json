{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "primaryResourceGroupName": {
      "type": "string",
      "defaultValue": "PrimaryResourceGroup",
      "metadata": {
        "description": "Name of the primary resource group."
      }
    },
    "primaryLocation": {
      "type": "string",
      "metadata": {
        "description": "Location for the primary resource group."
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault to be created."
      }
    },
    "secondaryTemplateUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/FranciscoJSB/NonProfitLZ/main/azuredeploy_secondary.json",
      "metadata": {
        "description": "URI of the secondary template to be deployed."
      }
    },
    "secondaryResourceGroupName": {
      "type": "string",
      "defaultValue": "SecondaryResourceGroup",
      "metadata": {
        "description": "Name of the secondary resource group."
      }
    },
    "secondaryLocation": {
      "type": "string",
      "metadata": {
        "description": "Location for the secondary resource group."
      }
    },
    "vnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Virtual Network to be created."
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix for the Virtual Network."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[parameters('keyVaultName')]",
      "location": "[parameters('primaryLocation')]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": []
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "secondaryDeployment",
      "dependsOn": [
        "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('secondaryTemplateUri')]"
        },
        "parameters": {
          "secondaryResourceGroupName": {
            "value": "[parameters('secondaryResourceGroupName')]"
          },
          "secondaryLocation": {
            "value": "[parameters('secondaryLocation')]"
          },
          "vnetName": {
            "value": "[parameters('vnetName')]"
          },
          "vnetAddressPrefix": {
            "value": "[parameters('vnetAddressPrefix')]"
          }
        }
      }
    }
  ],
  "outputs": {
    "keyVaultName": {
      "type": "string",
      "value": "[parameters('keyVaultName')]"
    },
    "secondaryResourceGroupName": {
      "type": "string",
      "value": "[parameters('secondaryResourceGroupName')]"
    }
  }
}
