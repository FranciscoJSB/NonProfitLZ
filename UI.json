{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "view": {
    "kind": "Form",
    "properties": {
      "title": "FSI Landing Zones on Microsoft Azure",
      "isWizard": true,
      "steps": [
        {
          "name": "basics",
          "label": "Deployment location",
          "elements": [
            {
              "name": "resourceScope",
              "type": "Microsoft.Common.ResourceScope"
            }
          ]
        },
        {
          "name": "projectDetails",
          "label": "Project details",
          "elements": [
            {
              "name": "directory",
              "type": "Microsoft.Common.TextBox",
              "label": "Directory",
              "defaultValue": "danjohnsonsoftwareone.onmicrosoft.com",
              "toolTip": "Directory (tenant) scope for the deployment",
              "constraints": {
                "required": true
              }
            },
            {
              "name": "region",
              "type": "Microsoft.Common.DropDown",
              "label": "Region",
              "defaultValue": "Central US",
              "toolTip": "Select the Azure region",
              "constraints": {
                "allowedValues": [
                  {
                    "label": "Central US",
                    "value": "centralus"
                  },
                  {
                    "label": "East US",
                    "value": "eastus"
                  },
                  {
                    "label": "West US",
                    "value": "westus"
                  }
                ],
                "required": true
              }
            }
          ]
        },
        {
          "name": "templateDetails",
          "label": "Template",
          "elements": [
            {
              "name": "customTemplate",
              "type": "Microsoft.Common.Link",
              "label": "Customized template",
              "link": "https://custom-template-link",
              "toolTip": "Edit the deployment template"
            },
            {
              "name": "editTemplate",
              "type": "Microsoft.Common.Button",
              "label": "Edit template",
              "toolTip": "Edit the deployment template"
            },
            {
              "name": "editParameters",
              "type": "Microsoft.Common.Button",
              "label": "Edit parameters",
              "toolTip": "Edit the deployment parameters"
            }
          ]
        }
      ]
    }
  },
  "outputs": {
    "region": "[basics.projectDetails.region]",
    "directory": "[basics.projectDetails.directory]"
  }
}
