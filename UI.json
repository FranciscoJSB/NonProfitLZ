{
  "schema": "https://schema.management.azure.com/schemas/2015-01-01/uiDefinition.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "basics": {
      "name": "Basics",
      "sections": [
        {
          "name": "template",
          "label": "Template",
          "elements": [
            {
              "name": "customTemplate",
              "type": "Microsoft.Common.Section",
              "label": "Customized template",
              "elements": [
                {
                  "name": "customTemplateLink",
                  "type": "Microsoft.Common.Link",
                  "label": "104 resources",
                  "link": "https://custom-template-link"
                },
                {
                  "name": "editTemplate",
                  "type": "Microsoft.Common.Button",
                  "label": "Edit template",
                  "toolTip": "Edit the deployment template"
                },
                {
                  "name": "editParameters",
                  "type": "Microsoft.Common.Button",
                  "label": "Edit parameters",
                  "toolTip": "Edit the deployment parameters"
                }
              ]
            }
          ]
        },
        {
          "name": "projectDetails",
          "label": "Project details",
          "elements": [
            {
              "name": "directory",
              "type": "Microsoft.Common.TextBox",
              "label": "Directory",
              "defaultValue": "danjohnsonsoftwareone.onmicrosoft.com",
              "toolTip": "Directory (tenant) scope for the deployment",
              "constraints": {
                "required": true
              }
            },
            {
              "name": "switchingDirectories",
              "type": "Microsoft.Common.Link",
              "label": "Switching directories will result in the Azure portal being reloaded. Any progress will be lost.",
              "link": "https://switch-directory-link"
            }
          ]
        },
        {
          "name": "instanceDetails",
          "label": "Instance details",
          "elements": [
            {
              "name": "region",
              "type": "Microsoft.Common.DropDown",
              "label": "Region",
              "toolTip": "Select the Azure region",
              "defaultValue": "Central US",
              "options": [
                {
                  "label": "Central US",
                  "value": "centralus"
                },
                {
                  "label": "East US",
                  "value": "eastus"
                },
                {
                  "label": "West US",
                  "value": "westus"
                }
              ],
              "constraints": {
                "required": true
              }
            }
          ]
        }
      ]
    }
  },
  "outputs": {
    "region": "[basics.instanceDetails.region]",
    "directory": "[basics.projectDetails.directory]"
  }
}
