{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [],
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the virtual network."
      }
    },
    "addressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address space for the virtual network."
      }
    },
    "subnetPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix for the subnet."
      }
    }
  },
  "outputs": {
    "formDefinition": {
      "type": "object",
      "value": {
        "title": "Create Virtual Network",
        "description": "This template allows you to create a virtual network with specified address space and subnet.",
        "fields": [
          {
            "name": "location",
            "type": "string",
            "label": "Location",
            "defaultValue": "eastus",
            "toolTip": "The location for all resources."
          },
          {
            "name": "virtualNetworkName",
            "type": "string",
            "label": "Virtual Network Name",
            "defaultValue": "myVnet",
            "toolTip": "Name of the virtual network."
          },
          {
            "name": "addressPrefix",
            "type": "string",
            "label": "Address Prefix",
            "defaultValue": "10.0.0.0/16",
            "toolTip": "Address space for the virtual network."
          },
          {
            "name": "subnetPrefix",
            "type": "string",
            "label": "Subnet Prefix",
            "defaultValue": "10.0.0.0/24",
            "toolTip": "Address prefix for the subnet."
          }
        ]
      }
    }
  }
}
