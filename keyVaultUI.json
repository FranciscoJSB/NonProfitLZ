{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Custom Deployment",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "subscription": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[not(contains(toLower(steps('basics').resourceScope.subscription.displayName),'test'))]",
                                            "message": "Can't use test subscription."
                                        }
                                    ]
                                },
                                "resourceProviders": [
                                    "Microsoft.KeyVault",
                                    "Microsoft.Storage"
                                ]
                            },
                            "location": {
                                "label": "Region",
                                "toolTip": "Azure region",
                                "resourceTypes": [
                                    "Microsoft.KeyVault/vaults",
                                    "Microsoft.Storage/storageAccounts"
                                ],
                                "allowedValues": [
                                    "eastus",
                                    "westus2"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "identityAndAccess",
                    "label": "Identity and Access",
                    "elements": [
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault Name",
                            "toolTip": "The name of the Key Vault.",
                            "defaultValue": "my-keyvault",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{3,24}$",
                                        "message": "The Key Vault name must be between 3 and 24 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "networking",
                    "label": "Networking",
                    "elements": [
                        {
                            "name": "vnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "VNet Name",
                            "toolTip": "The name of the Virtual Network.",
                            "defaultValue": "my-vnet",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{3,24}$",
                                        "message": "The VNet name must be between 3 and 24 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "firewallSubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Azure Firewall Subnet Address",
                            "toolTip": "Address space for the Azure Firewall subnet (e.g., 10.0.1.0/24).",
                            "defaultValue": "10.0.1.0/24",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "gatewaySubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Gateway Subnet Address",
                            "toolTip": "Address space for the Gateway Subnet (e.g., 10.0.2.0/24).",
                            "defaultValue": "10.0.2.0/24",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "additionalSubnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Additional Subnet Name",
                            "toolTip": "The name of the Additional Subnet.",
                            "defaultValue": "additional-subnet",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{3,24}$",
                                        "message": "The Additional Subnet name must be between 3 and 24 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "additionalSubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Additional Subnet Address",
                            "toolTip": "Address space for the Additional Subnet (e.g., 10.0.3.0/24).",
                            "defaultValue": "10.0.3.0/24",
                            "constraints": {
                                "required": true
                            }
                        }
                    ]
                },
                {
                    "name": "monitoring",
                    "label": "Monitoring",
                    "elements": [
                        {
                            "name": "logAnalyticsWorkspaceName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Log Analytics Workspace Name",
                            "toolTip": "The name of the Log Analytics Workspace.",
                            "defaultValue": "my-log-analytics-workspace",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{4,50}$",
                                        "message": "The Log Analytics Workspace name must be between 4 and 50 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "logRetentionDays",
                            "type": "Microsoft.Common.Slider",
                            "label": "Log Analytics Data Retention (days)",
                            "defaultValue": 30,
                            "min": 30,
                            "max": 730,
                            "constraints": {
                                "required": true
                            }
                        }
                    ]
                },
                {
                    "name": "storage",
                    "label": "Storage",
                    "elements": [
                        {
                            "name": "storageAccountName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Storage Account Name",
                            "toolTip": "The name of the Storage Account.",
                            "defaultValue": "mystorageaccount",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-z0-9]{3,24}$",
                                        "message": "The Storage Account name must be between 3 and 24 characters long and contain only lowercase letters and numbers."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "storageAccountSku",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Storage Account SKU",
                            "defaultValue": "Standard_LRS",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Standard_LRS",
                                        "value": "Standard_LRS"
                                    },
                                    {
                                        "label": "Standard_GRS",
                                        "value": "Standard_GRS"
                                    },
                                    {
                                        "label": "Standard_ZRS",
                                        "value": "Standard_ZRS"
                                    },
                                    {
                                        "label": "Premium_LRS",
                                        "value": "Premium_LRS"
                                    }
                                ],
                                "required": true
                            },
                            "toolTip": "The SKU for the Storage Account."
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "keyVaultName": "[steps('identityAndAccess').keyVaultName]",
                "vnetName": "[steps('networking').vnetName]",
                "firewallSubnetAddress": "[steps('networking').firewallSubnetAddress]",
                "gatewaySubnetAddress": "[steps('networking').gatewaySubnetAddress]",
                "additionalSubnetName": "[steps('networking').additionalSubnetName]",
                "additionalSubnetAddress": "[steps('networking').additionalSubnetAddress]",
                "logAnalyticsWorkspaceName": "[steps('monitoring').logAnalyticsWorkspaceName]",
                "logRetentionDays": "[steps('monitoring').logRetentionDays]",
                "storageAccountName": "[steps('storage').storageAccountName]",
                "storageAccountSku": "[steps('storage').storageAccountSku]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}
