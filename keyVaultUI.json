{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Custom Key Vault Creation",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "subscription": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[not(contains(toLower(steps('basics').resourceScope.subscription.displayName),'test'))]",
                                            "message": "Can't use test subscription."
                                        }
                                    ]
                                },
                                "resourceProviders": [
                                    "Microsoft.KeyVault"
                                ]
                            },
                            "location": {
                                "label": "Region",
                                "toolTip": "Azure region",
                                "resourceTypes": [
                                    "Microsoft.KeyVault/vaults"
                                ],
                                "allowedValues": [
                                    "eastus",
                                    "westus2"
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "identityAndAccess",
                    "label": "Identity and Access",
                    "elements": [
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault Name",
                            "toolTip": "The name of the Key Vault.",
                            "defaultValue": "my-keyvault",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{3,24}$",
                                        "message": "The Key Vault name must be between 3 and 24 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "networking",
                    "label": "Networking",
                    "elements": [
                        {
                            "name": "deployHubSpoke",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy Hub and Spoke Topology",
                            "defaultValue": "No",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "toolTip": "Choose whether to deploy Hub and Spoke topology."
                        },
                        {
                            "name": "deployAzureFirewall",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy Azure Firewall",
                            "defaultValue": "No",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "toolTip": "Choose whether to deploy Azure Firewall.",
                            "visible": "[equals(steps('networking').deployHubSpoke, 'Yes')]"
                        },
                        {
                            "name": "firewallSubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Azure Firewall Subnet Address",
                            "toolTip": "Address space for the Azure Firewall subnet (e.g., 10.0.1.0/24).",
                            "defaultValue": "10.0.1.0/24",
                            "visible": "[equals(steps('networking').deployAzureFirewall, 'Yes')]"
                        },
                        {
                            "name": "deployGatewaySubnet",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy Gateway Subnet",
                            "defaultValue": "No",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "toolTip": "Choose whether to deploy a Gateway Subnet.",
                            "visible": "[equals(steps('networking').deployHubSpoke, 'Yes')]"
                        },
                        {
                            "name": "gatewaySubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Gateway Subnet Address",
                            "toolTip": "Address space for the Gateway Subnet (e.g., 10.0.2.0/24).",
                            "defaultValue": "10.0.2.0/24",
                            "visible": "[equals(steps('networking').deployGatewaySubnet, 'Yes')]"
                        },
                        {
                            "name": "deployAdditionalSubnet",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy Additional Subnet",
                            "defaultValue": "No",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "toolTip": "Choose whether to deploy an Additional Subnet.",
                            "visible": "[equals(steps('networking').deployHubSpoke, 'Yes')]"
                        },
                        {
                            "name": "additionalSubnetAddress",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Additional Subnet Address",
                            "toolTip": "Address space for the Additional Subnet (e.g., 10.0.3.0/24).",
                            "defaultValue": "10.0.3.0/24",
                            "visible": "[equals(steps('networking').deployAdditionalSubnet, 'Yes')]"
                        }
                    ]
                },
                {
                    "name": "monitoring",
                    "label": "Monitoring",
                    "elements": [
                        {
                            "name": "deployLogAnalytics",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy Log Analytics Workspace",
                            "defaultValue": "No",
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "toolTip": "Choose whether to deploy a Log Analytics Workspace."
                        },
                        {
                            "name": "logAnalyticsWorkspaceName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Log Analytics Workspace Name",
                            "toolTip": "The name of the Log Analytics Workspace.",
                            "defaultValue": "my-log-analytics-workspace",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{4,50}$",
                                        "message": "The Log Analytics Workspace name must be between 4 and 50 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            },
                            "visible": "[equals(steps('monitoring').deployLogAnalytics, 'Yes')]"
                        },
                        {
                            "name": "logRetentionDays",
                            "type": "Microsoft.Common.Slider",
                            "label": "Log Analytics Data Retention (days)",
                            "defaultValue": 30,
                            "min": 30,
                            "max": 730,
                            "visible": "[equals(steps('monitoring').deployLogAnalytics, 'Yes')]"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "location": "[steps('basics').resourceScope.location.name]",
                "keyVaultName": "[steps('identityAndAccess').keyVaultName]",
                "deployHubSpoke": "[steps('networking').deployHubSpoke]",
                "deployAzureFirewall": "[steps('networking').deployAzureFirewall]",
                "firewallSubnetAddress": "[steps('networking').firewallSubnetAddress]",
                "deployGatewaySubnet": "[steps('networking').deployGatewaySubnet]",
                "gatewaySubnetAddress": "[steps('networking').gatewaySubnetAddress]",
                "deployAdditionalSubnet": "[steps('networking').deployAdditionalSubnet]",
                "additionalSubnetAddress": "[steps('networking').additionalSubnetAddress]",
                "deployLogAnalytics": "[steps('monitoring').deployLogAnalytics]",
                "logAnalyticsWorkspaceName": "[steps('monitoring').logAnalyticsWorkspaceName]",
                "logRetentionDays": "[steps('monitoring').logRetentionDays]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}
