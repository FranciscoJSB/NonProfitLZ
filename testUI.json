{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Custom Deployment for Identity and Connectivity",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "managementGroupPrefix",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Management Group Prefix",
                            "toolTip": "Prefix for the management group",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-zA-Z0-9-]{1,10}$",
                                "validationMessage": "Prefix must be between 1 and 10 characters long and contain letters, numbers, and hyphens only."
                            }
                        }
                    ]
                },
                {
                    "name": "identityManagement",
                    "label": "Identity Management and Connectivity",
                    "elements": [
                        {
                            "name": "resourceScopeIdentity",
                            "type": "Microsoft.Common.ResourceScope",
                            "subscription": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[not(contains(toLower(steps('identityManagement').resourceScopeIdentity.subscription.displayName),'test'))]",
                                            "message": "Can't use test subscription."
                                        }
                                    ]
                                },
                                "resourceProviders": [
                                    "Microsoft.KeyVault"
                                ]
                            },
                            "location": {
                                "label": "Region",
                                "toolTip": "Azure region",
                                "resourceTypes": [
                                    "Microsoft.KeyVault/vaults"
                                ],
                                "allowedValues": [
                                    "eastus",
                                    "westus2"
                                ]
                            }
                        },
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault name",
                            "toolTip": "The name of the Key Vault.",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z-]{3,24}$",
                                "validationMessage": "The Key Vault name must be between 3 and 24 characters long and contain letters, numbers, and hyphens only."
                            }
                        }
                    ]
                },
                {
                    "name": "landingZone",
                    "label": "Small Landing Zone",
                    "elements": [
                        {
                            "name": "resourceScopeLandingZone",
                            "type": "Microsoft.Common.ResourceScope",
                            "subscription": {
                                "constraints": {
                                    "validations": [
                                        {
                                            "isValid": "[not(contains(toLower(steps('landingZone').resourceScopeLandingZone.subscription.displayName),'test'))]",
                                            "message": "Can't use test subscription."
                                        }
                                    ]
                                },
                                "resourceProviders": [
                                    "Microsoft.Network"
                                ]
                            },
                            "location": {
                                "label": "Region",
                                "toolTip": "Azure region",
                                "resourceTypes": [
                                    "Microsoft.Network/virtualNetworks"
                                ],
                                "allowedValues": [
                                    "eastus",
                                    "westus2"
                                ]
                            }
                        },
                        {
                            "name": "vnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "VNet name",
                            "toolTip": "The name of the Virtual Network.",
                            "constraints": {
                                "required": true,
                                "regex": "^[a-z0-9A-Z-]{3,64}$",
                                "validationMessage": "The VNet name must be between 3 and 64 characters long and contain letters, numbers, and hyphens only."
                            }
                        },
                        {
                            "name": "addressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Address Space",
                            "toolTip": "The address space for the Virtual Network.",
                            "constraints": {
                                "required": true,
                                "regex": "^([0-9]{1,3}\.){3}[0-9]{1,3}/[0-9]{1,2}$",
                                "validationMessage": "The address space must be in CIDR format."
                            },
                            "defaultValue": "10.0.0.0/16"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "managementGroupPrefix": "[steps('basics').managementGroupPrefix]",
                "keyVaultName": "[steps('identityManagement').keyVaultName]",
                "keyVaultRegion": "[steps('identityManagement').resourceScopeIdentity.location.name]",
                "vnetName": "[steps('landingZone').vnetName]",
                "vnetRegion": "[steps('landingZone').resourceScopeLandingZone.location.name]",
                "addressSpace": "[steps('landingZone').addressSpace]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('identityManagement').resourceScopeIdentity.location.name]",
            "resourceGroupId": "[steps('identityManagement').resourceScopeIdentity.resourceGroup.id]"
        }
    }
}
