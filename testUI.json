{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "TestRGTab v5",
            "steps": [
                {
                    "name": "landingZone",
                    "label": "Landing Zone",
                    "elements": [
                        {
                            "name": "subscriptionSelectorText",
                            "type": "Microsoft.Common.TextBlock",
                            "options": {
                                "text": "Select the subscription and enter the resource group name for your Landing Zone deployment."
                            }
                        },
                        {
                            "name": "subscription",
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "label": "Subscription",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "resourceGroupName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Resource Group Name",
                            "toolTip": "Enter the name of the resource group to be created.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-_]+$",
                                        "message": "The resource group name must only contain letters, numbers, hyphens, and underscores."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "location",
                            "type": "Microsoft.Common.Location",
                            "label": "Region",
                            "toolTip": "Select the region for the resource group.",
                            "constraints": {
                                "required": true
                            },
                            "defaultValue": "[resourceGroup().location]"
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "subscriptionId": {
                    "type": "string",
                    "value": "[steps('landingZone').subscription.subscriptionId]"
                },
                "resourceGroupName": {
                    "type": "string",
                    "value": "[steps('landingZone').resourceGroupName]"
                },
                "location": {
                    "type": "string",
                    "value": "[steps('landingZone').location]"
                }
            }
        }
    }
}
