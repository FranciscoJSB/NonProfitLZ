{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "NPF - Landing Zone v6",
            "steps": [
                {
                    "name": "primaryDeployment",
                    "label": "Primary Deployment",
                    "elements": [
                        {
                            "name": "subscriptionSelectorText",
                            "type": "Microsoft.Common.TextBlock",
                            "options": {
                                "text": "Select the subscription and enter the resource group name for your primary deployment."
                            }
                        },
                        {
                            "name": "primarySubscription",
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "label": "Primary Subscription",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "primaryResourceGroupName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Primary Resource Group Name",
                            "defaultValue": "PrimaryResourceGroup",
                            "toolTip": "Enter the name of the resource group to be created.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-_]+$",
                                        "message": "The resource group name must only contain letters, numbers, hyphens, and underscores."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "primaryLocation",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Primary Region",
                            "toolTip": "Select the region for the primary resource group.",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "East US",
                                        "value": "eastus"
                                    },
                                    {
                                        "label": "East US 2",
                                        "value": "eastus2"
                                    },
                                    {
                                        "label": "West US",
                                        "value": "westus"
                                    },
                                    {
                                        "label": "West US 2",
                                        "value": "westus2"
                                    },
                                    {
                                        "label": "Central US",
                                        "value": "centralus"
                                    },
                                    {
                                        "label": "North Central US",
                                        "value": "northcentralus"
                                    },
                                    {
                                        "label": "South Central US",
                                        "value": "southcentralus"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault Name",
                            "toolTip": "Enter the name of the Key Vault to be created.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]+$",
                                        "message": "The Key Vault name must only contain letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "secondaryDeployment",
                    "label": "Secondary Deployment",
                    "elements": [
                        {
                            "name": "secondarySubscriptionSelectorText",
                            "type": "Microsoft.Common.TextBlock",
                            "options": {
                                "text": "Select the subscription and enter the resource group name for your secondary deployment."
                            }
                        },
                        {
                            "name": "secondarySubscription",
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "label": "Secondary Subscription",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "secondaryResourceGroupName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Secondary Resource Group Name",
                            "defaultValue": "SecondaryResourceGroup",
                            "toolTip": "Enter the name of the resource group to be created.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-_]+$",
                                        "message": "The resource group name must only contain letters, numbers, hyphens, and underscores."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "secondaryLocation",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Secondary Region",
                            "toolTip": "Select the region for the secondary resource group.",
                            "constraints": {
                                "required": true,
                                "allowedValues": [
                                    {
                                        "label": "East US",
                                        "value": "eastus"
                                    },
                                    {
                                        "label": "East US 2",
                                        "value": "eastus2"
                                    },
                                    {
                                        "label": "West US",
                                        "value": "westus"
                                    },
                                    {
                                        "label": "West US 2",
                                        "value": "westus2"
                                    },
                                    {
                                        "label": "Central US",
                                        "value": "centralus"
                                    },
                                    {
                                        "label": "North Central US",
                                        "value": "northcentralus"
                                    },
                                    {
                                        "label": "South Central US",
                                        "value": "southcentralus"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "vnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Virtual Network Name",
                            "toolTip": "Enter the name of the Virtual Network to be created.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]+$",
                                        "message": "The Virtual Network name must only contain letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        },
                        {
                            "name": "vnetAddressPrefix",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Virtual Network Address Prefix",
                            "toolTip": "Enter the address prefix for the Virtual Network (e.g., 10.0.0.0/16).",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}/[0-9]+$",
                                        "message": "The address prefix must be a valid CIDR notation (e.g., 10.0.0.0/16)."
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "primaryResourceGroupName": {
                    "type": "string",
                    "value": "[steps('primaryDeployment').primaryResourceGroupName]"
                },
                "primaryLocation": {
                    "type": "string",
                    "value": "[steps('primaryDeployment').primaryLocation]"
                },
                "keyVaultName": {
                    "type": "string",
                    "value": "[steps('primaryDeployment').keyVaultName]"
                },
                "secondarySubscriptionId": {
                    "type": "string",
                    "value": "[steps('secondaryDeployment').secondarySubscription.subscriptionId]"
                },
                "secondaryResourceGroupName": {
                    "type": "string",
                    "value": "[steps('secondaryDeployment').secondaryResourceGroupName]"
                },
                "secondaryLocation": {
                    "type": "string",
                    "value": "[steps('secondaryDeployment').secondaryLocation]"
                },
                "vnetName": {
                    "type": "string",
                    "value": "[steps('secondaryDeployment').vnetName]"
                },
                "vnetAddressPrefix": {
                    "type": "string",
                    "value": "[steps('secondaryDeployment').vnetAddressPrefix]"
                }
            }
        }
    }
}
