{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Custom Deployment Template",
            "isWizard": false,
            "steps": [
                {
                    "name": "basics",
                    "label": "Basic Settings",
                    "elements": [
                        {
                            "name": "virtualNetworkName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Virtual Network Name",
                            "toolTip": "The name of the virtual network.",
                            "defaultValue": "HubVNet",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "hubSubnetName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Hub Subnet Name",
                            "toolTip": "The name of the Hub subnet.",
                            "defaultValue": "HubSubnet",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "deployExpressRoute",
                            "type": "Microsoft.Common.OptionsGroup",
                            "label": "Deploy ExpressRoute Gateway",
                            "toolTip": "Set to true to deploy an ExpressRoute Gateway; otherwise, false.",
                            "defaultValue": false,
                            "constraints": {
                                "allowedValues": [
                                    {
                                        "label": "True",
                                        "value": true
                                    },
                                    {
                                        "label": "False",
                                        "value": false
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "name": "advancedSettings",
                    "label": "Advanced Settings",
                    "elements": [
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault Name",
                            "toolTip": "The name of the Key Vault.",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "logAnalyticsWorkspaceName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Log Analytics Workspace Name",
                            "toolTip": "The name of the Log Analytics Workspace for Azure Monitor.",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "securityContactEmail",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Security Contact Email",
                            "toolTip": "The email address to receive security alerts.",
                            "constraints": {
                                "required": true,
                                "regex": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$",
                                "validationMessage": "Please provide a valid email address."
                            }
                        },
                        {
                            "name": "securityContactPhone",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Security Contact Phone",
                            "toolTip": "The phone number to receive security alerts.",
                            "constraints": {
                                "required": true
                            }
                        },
                        {
                            "name": "dnsZoneName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "DNS Zone Name",
                            "toolTip": "The name of the DNS zone to be created.",
                            "constraints": {
                                "required": true
                            }
                        }
                    ]
                },
                {
                    "name": "addressSpaces",
                    "label": "Address Spaces",
                    "elements": [
                        {
                            "name": "virtualNetworkAddressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Virtual Network Address Space",
                            "toolTip": "CIDR block for the virtual network address space.",
                            "defaultValue": "10.0.0.0/16",
                            "constraints": {
                                "required": true,
                                "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}\\/[0-9]{1,2}$",
                                "validationMessage": "Please provide a valid CIDR block."
                            }
                        },
                        {
                            "name": "firewallSubnetAddressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Firewall Subnet Address Space",
                            "toolTip": "CIDR block for the Firewall subnet address space.",
                            "defaultValue": "10.0.1.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}\\/[0-9]{1,2}$",
                                "validationMessage": "Please provide a valid CIDR block."
                            }
                        },
                        {
                            "name": "gatewaySubnetAddressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Gateway Subnet Address Space",
                            "toolTip": "CIDR block for the Gateway subnet address space.",
                            "defaultValue": "10.0.2.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}\\/[0-9]{1,2}$",
                                "validationMessage": "Please provide a valid CIDR block."
                            }
                        },
                        {
                            "name": "hubSubnetAddressSpace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Hub Subnet Address Space",
                            "toolTip": "CIDR block for the Hub subnet address space.",
                            "defaultValue": "10.0.3.0/24",
                            "constraints": {
                                "required": true,
                                "regex": "^([0-9]{1,3}\\.){3}[0-9]{1,3}\\/[0-9]{1,2}$",
                                "validationMessage": "Please provide a valid CIDR block."
                            }
                        }
                    ]
                }
            ]
        }
    }
}
