{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "nestedVnetDeployment1",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks",
                            "apiVersion": "2020-11-01",
                            "name": "[parameters('vnetName1')]",
                            "location": "[parameters('location1')]",
                            "properties": {
                                "addressSpace": {
                                    "addressPrefixes": [
                                        "[parameters('vnetAddressSpace1')]"
                                    ]
                                },
                                "subnets": [
                                    {
                                        "name": "default",
                                        "properties": {
                                            "addressPrefix": "[parameters('subnetAddressSpace1')]"
                                        }
                                    }
                                ]
                            }
                        }
                    ],
                    "parameters": {
                        "location1": {
                            "type": "string"
                        },
                        "vnetName1": {
                            "type": "string"
                        },
                        "vnetAddressSpace1": {
                            "type": "string"
                        },
                        "subnetAddressSpace1": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "nestedVnetDeployment2",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Network/virtualNetworks",
                            "apiVersion": "2020-11-01",
                            "name": "[parameters('vnetName2')]",
                            "location": "[parameters('location2')]",
                            "properties": {
                                "addressSpace": {
                                    "addressPrefixes": [
                                        "[parameters('vnetAddressSpace2')]"
                                    ]
                                },
                                "subnets": [
                                    {
                                        "name": "default",
                                        "properties": {
                                            "addressPrefix": "[parameters('subnetAddressSpace2')]"
                                        }
                                    }
                                ]
                            }
                        }
                    ],
                    "parameters": {
                        "location2": {
                            "type": "string"
                        },
                        "vnetName2": {
                            "type": "string"
                        },
                        "vnetAddressSpace2": {
                            "type": "string"
                        },
                        "subnetAddressSpace2": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    ],
    "parameters": {
        "location1": {
            "type": "string"
        },
        "vnetName1": {
            "type": "string"
        },
        "vnetAddressSpace1": {
            "type": "string"
        },
        "subnetAddressSpace1": {
            "type": "string"
        },
        "location2": {
            "type": "string"
        },
        "vnetName2": {
            "type": "string"
        },
        "vnetAddressSpace2": {
            "type": "string"
        },
        "subnetAddressSpace2": {
            "type": "string"
        }
    }
}
