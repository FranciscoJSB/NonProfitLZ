{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "networkingTopology": {
            "type": "string"
        },
        "connectivitySubscription": {
            "type": "string"
        },
        "resourceGroup1": {
            "type": "string"
        },
        "subscription2": {
            "type": "string"
        },
        "resourceGroup2": {
            "type": "string"
        },
        "location": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "subscriptionId": "[parameters('connectivitySubscription')]",
            "resourceGroup": "[parameters('resourceGroup1')]",
            "name": "[concat('storage', uniqueString(resourceGroup().id))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "subscriptionId": "[parameters('subscription2')]",
            "resourceGroup": "[parameters('resourceGroup2')]",
            "name": "[concat('storage', uniqueString(resourceGroup().id))]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot"
            },
            "condition": "[equals(parameters('networkingTopology'), 'virtualWan')]"
        }
    ]
}
