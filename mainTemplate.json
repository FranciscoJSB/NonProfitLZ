{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "mgmtGroupPrefix": {
            "type": "string"
        },
        "subscriptionId": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "resourceGroupDeployment",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2021-04-01",
                            "location": "[parameters('location')]",
                            "name": "[concat(parameters('mgmtGroupPrefix'), '-patito')]"
                        }
                    ]
                },
                "parameters": {
                    "location": {
                        "value": "[parameters('location')]"
                    },
                    "mgmtGroupPrefix": {
                        "value": "[parameters('mgmtGroupPrefix')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "resourceGroupName": {
            "type": "string",
            "value": "[concat(parameters('mgmtGroupPrefix'), '-patito')]"
        }
    }
}
