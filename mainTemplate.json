        "location1": {
            "type": "string"
        },
        "vnetName1": {
            "type": "string"
        },
        "vnetAddressSpace1": {
            "type": "string"
        },
        "subnetAddressSpace1": {
            "type": "string"
        },
        "subscriptionId2": {
            "type": "string"
        },
        "resourceGroup2": {
            "type": "string"
        },
        "location2": {
            "type": "string"
        },
        "vnetName2": {
            "type": "string"
        },
        "vnetAddressSpace2": {
            "type": "string"
        },
