{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "industryPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for all resources."
      }
    },
    "managementGroupPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for the single management group."
      }
    },
    "managementSubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for management resources."
      }
    },
    "connectivitySubscriptionId": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for connectivity resources."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Management/managementGroups",
      "apiVersion": "2020-05-01",
      "name": "[parameters('managementGroupPrefix')]",
      "properties": {
        "displayName": "[parameters('managementGroupPrefix')]",
        "details": {
          "parent": {
            "id": "/providers/Microsoft.Management/managementGroups/[tenant().tenantId]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[concat(parameters('industryPrefix'), '-management-resources-deployment')]",
      "location": "[deployment().location]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/management/resources/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "managementSubscriptionId": {
            "value": "[parameters('managementSubscriptionId')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-10-01",
      "name": "[concat(parameters('industryPrefix'), '-connectivity-resources-deployment')]",
      "location": "[deployment().location]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/connectivity/resources/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "connectivitySubscriptionId": {
            "value": "[parameters('connectivitySubscriptionId')]"
          }
        }
      }
    }
  ]
}
