{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subscription1Id": {
      "type": "string",
      "metadata": {
        "description": "The subscription ID for the first VNet"
      }
    },
    "subscription2Id": {
      "type": "string",
      "metadata": {
        "description": "The subscription ID for the second VNet"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "East US",
      "metadata": {
        "description": "The location for the VNets"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "vnetDeployment1",
      "properties": {
        "subscriptionId": "[parameters('subscription1Id')]",
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "vnetName": {
              "type": "string",
              "metadata": {
                "description": "The name of the VNet"
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "The location of the VNet"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "name": "[parameters('vnetName')]",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "10.0.0.0/16"
                  ]
                }
              }
            }
          ]
        },
        "parameters": {
          "vnetName": {
            "value": "vnet1"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "vnetDeployment2",
      "properties": {
        "subscriptionId": "[parameters('subscription2Id')]",
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "vnetName": {
              "type": "string",
              "metadata": {
                "description": "The name of the VNet"
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "The location of the VNet"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.Network/virtualNetworks",
              "apiVersion": "2020-06-01",
              "name": "[parameters('vnetName')]",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "10.1.0.0/16"
                  ]
                }
              }
            }
          ]
        },
        "parameters": {
          "vnetName": {
            "value": "vnet2"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    }
  ]
}
