{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscription1": {
            "type": "string"
        },
        "subscription2": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "West US",
            "metadata": {
                "description": "Location for resources"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "subscription1Deployment",
            "subscriptionId": "[parameters('subscription1')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2021-04-01",
                            "location": "[parameters('location')]",
                            "properties": {},
                            "name": "[concat('rg-', uniqueString(subscription().subscriptionId))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "subscription2Deployment",
            "subscriptionId": "[parameters('subscription2')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                        {
                            "type": "Microsoft.Resources/resourceGroups",
                            "apiVersion": "2021-04-01",
                            "location": "[parameters('location')]",
                            "properties": {},
                            "name": "[concat('rg-', uniqueString(subscription().subscriptionId))]"
                        }
                    ]
                }
            }
        }
    ],
    "outputs": {
        "subscription1Output": {
            "type": "string",
            "value": "[parameters('subscription1')]"
        },
        "subscription2Output": {
            "type": "string",
            "value": "[parameters('subscription2')]"
        }
    }
}
