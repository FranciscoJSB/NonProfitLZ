{
    "$schema": "http://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Subscription Test",
            "steps": [
                {
                    "name": "subscriptionStep",
                    "label": "Select Subscriptions",
                    "elements": [
                        {
                            "name": "subscription1",
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "label": "Subscription 1",
                            "toolTip": "Select the first subscription",
                            "required": true
                        },
                        {
                            "name": "subscription2",
                            "type": "Microsoft.Common.SubscriptionSelector",
                            "label": "Subscription 2",
                            "toolTip": "Select the second subscription",
                            "required": true
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "subscription1": "[steps('subscriptionStep').subscription1.subscriptionId]",
                "subscription2": "[steps('subscriptionStep').subscription2.subscriptionId]"
            }
        }
    }
}
