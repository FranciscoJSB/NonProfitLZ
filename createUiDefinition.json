{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "eastus",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "industryPrefix": {
      "type": "string",
      "metadata": {
        "description": "Prefix for all resources."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('industryPrefix'), '-location-deployment')]",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/location/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('industryPrefix'), '-management-group-deployment')]",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/management/group/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "industryPrefix": {
            "value": "[parameters('industryPrefix')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('industryPrefix'), '-management-subscription-deployment')]",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/management/subscription/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "managementSubscriptionId": {
            "value": "[parameters('managementSubscriptionId')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "[concat(parameters('industryPrefix'), '-connectivity-subscription-deployment')]",
      "location": "[parameters('location')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://path/to/connectivity/subscription/deployment/template.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "connectivitySubscriptionId": {
            "value": "[parameters('connectivitySubscriptionId')]"
          }
        }
      }
    }
  ]
}
