{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Key Vault Deployment",
            "isWizard": false,
            "steps": [
                {
                    "name": "keyVaultDetails",
                    "label": "Key Vault Details",
                    "elements": [
                        {
                            "name": "keyVaultName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Key Vault Name",
                            "toolTip": "The name of the Key Vault.",
                            "constraints": {
                                "required": true,
                                "validations": [
                                    {
                                        "regex": "^[a-zA-Z0-9-]{3,24}$",
                                        "message": "The Key Vault name must be between 3 and 24 characters long and contain only letters, numbers, and hyphens."
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "keyVaultName": "[steps('keyVaultDetails').keyVaultName]"
            },
            "kind": "ResourceGroup",
            "location": "eastus"
        }
    }
}
