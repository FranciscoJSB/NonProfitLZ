{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string"
        },
        "keyVaultSubscription": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "additionalSubnetName": {
            "type": "string"
        },
        "additionalSubnetAddress": {
            "type": "string"
        },
        "logAnalyticsWorkspaceName": {
            "type": "string"
        },
        "logAnalyticsWorkspaceSubscription": {
            "type": "string"
        },
        "logRetentionDays": {
            "type": "int"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountSku": {
            "type": "string"
        },
        "storageAccountSubscription": {
            "type": "string"
        },
        "nsgName": {
            "type": "string"
        },
        "landingZoneSubscription": {
            "type": "string"
        },
        "landingZoneKeyVaultName": {
            "type": "string"
        },
        "defenderForCloud": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-06-01-preview",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('keyVaultSubscription')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[subscription().tenantId]"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-06-01-preview",
            "name": "[parameters('landingZoneKeyVaultName')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('landingZoneSubscription')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[subscription().tenantId]"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-06-01",
            "name": "[parameters('vnetName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "default",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24"
                        }
                    },
                    {
                        "name": "[parameters('additionalSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('additionalSubnetAddress')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[parameters('nsgName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-06-01",
            "name": "[concat(parameters('vnetName'), '/', parameters('additionalSubnetName'))]",
            "properties": {
                "addressPrefix": "[parameters('additionalSubnetAddress')]",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                }
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-08-01",
            "name": "[parameters('logAnalyticsWorkspaceName')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('logAnalyticsWorkspaceSubscription')]",
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": "[parameters('logRetentionDays')]"
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "subscriptionId": "[parameters('storageAccountSubscription')]",
            "sku": {
                "name": "[parameters('storageAccountSku')]"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Security/pricings",
            "apiVersion": "2018-06-01",
            "name": "default",
            "properties": {
                "pricingTier": "[parameters('defenderForCloud')]"
            }
        }
    ],
    "outputs": {
        "keyVaultName": {
            "type": "string",
            "value": "[parameters('keyVaultName')]"
        },
        "landingZoneKeyVaultName": {
            "type": "string",
            "value": "[parameters('landingZoneKeyVaultName')]"
        },
        "vnetName": {
            "type": "string",
            "value": "[parameters('vnetName')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[parameters('nsgName')]"
        },
        "logAnalyticsWorkspaceName": {
            "type": "string",
            "value": "[parameters('logAnalyticsWorkspaceName')]"
        },
        "storageAccountName": {
            "type": "string",
            "value": "[parameters('storageAccountName')]"
        },
        "defenderForCloud": {
            "type": "string",
            "value": "[parameters('defenderForCloud')]"
        }
    }
}
