{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "landingZoneSubscription": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for the landing zone."
      }
    },
    "additionalLocation": {
      "type": "string",
      "metadata": {
        "description": "Location for additional resources."
      }
    },
    "additionalSubscription": {
      "type": "string",
      "metadata": {
        "description": "Subscription ID for additional deployment."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "nestedResourceGroupDeployment",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Resources/resourceGroups",
              "apiVersion": "2021-04-01",
              "location": "[parameters('location')]",
              "name": "prueba",
              "properties": {}
            }
          ]
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2021-04-01",
      "name": "additionalResourceGroupDeployment",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "type": "Microsoft.Resources/resourceGroups",
              "apiVersion": "2021-04-01",
              "location": "[parameters('additionalLocation')]",
              "name": "prueba-additional",
              "properties": {}
            }
          ]
        }
      },
      "subscriptionId": "[parameters('additionalSubscription')]"
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "prueba"
    },
    "additionalResourceGroupName": {
      "type": "string",
      "value": "prueba-additional"
    }
  }
}
