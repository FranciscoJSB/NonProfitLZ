{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "vnetName": {
            "type": "string"
        },
        "vnetAddressSpace": {
            "type": "string"
        },
        "gatewaySubnetAddress": {
            "type": "string"
        },
        "vpnGateway": {
            "type": "string"
        },
        "dnsZone": {
            "type": "string"
        },
        "nsgName": {
            "type": "string"
        },
        "additionalSubnetName": {
            "type": "string"
        },
        "additionalSubnetAddress": {
            "type": "string"
        },
        "logAnalyticsWorkspaceName": {
            "type": "string"
        },
        "logRetentionDays": {
            "type": "int"
        },
        "recoveryServicesVaultName": {
            "type": "string"
        },
        "defenderForCloud": {
            "type": "string"
        },
        "storageAccountName": {
            "type": "string"
        },
        "storageAccountSku": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-06-01",
            "name": "[parameters('vnetName')]",
            "location": "[parameters('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vnetAddressSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "GatewaySubnet",
                        "properties": {
                            "addressPrefix": "[parameters('gatewaySubnetAddress')]"
                        }
                    },
                    {
                        "name": "[parameters('additionalSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('additionalSubnetAddress')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworkGateways",
            "apiVersion": "2020-11-01",
            "name": "[parameters('vpnGateway')]",
            "location": "[parameters('location')]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "vnetGatewayConfig",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'GatewaySubnet')]"
                            },
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', concat(parameters('vpnGateway'), '-publicIp'))]"
                            }
                        }
                    }
                ],
                "gatewayType": "Vpn",
                "vpnType": "RouteBased",
                "enableBgp": false,
                "sku": {
                    "name": "VpnGw1",
                    "tier": "VpnGw1"
                },
                "gatewayDefaultSite": null
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-11-01",
            "name": "[concat(parameters('vpnGateway'), '-publicIp')]",
            "location": "[parameters('location')]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Network/dnszones",
            "apiVersion": "2018-05-01",
            "name": "[parameters('dnsZone')]",
            "location": "[parameters('location')]"
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[parameters('nsgName')]",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-06-01",
            "name": "[concat(parameters('vnetName'), '/', parameters('additionalSubnetName'))]",
            "properties": {
                "addressPrefix": "[parameters('additionalSubnetAddress')]",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                }
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-06-01-preview",
            "name": "[parameters('keyVaultName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[subscription().tenantId]",
                "accessPolicies": []
            }
        },
        {
            "type": "Microsoft.OperationalInsights/workspaces",
            "apiVersion": "2020-08-01",
            "name": "[parameters('logAnalyticsWorkspaceName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "PerGB2018"
                },
                "retentionInDays": "[parameters('logRetentionDays')]"
            }
        },
        {
            "type": "Microsoft.RecoveryServices/vaults",
            "apiVersion": "2018-01-10",
            "name": "[parameters('recoveryServicesVaultName')]",
            "location": "[parameters('location')]",
            "properties": {
                "sku": {
                    "name": "Standard"
                }
            }
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('storageAccountSku')]"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot"
            }
        },
        {
            "type": "Microsoft.Security/pricings",
            "apiVersion": "2018-06-01",
            "name": "default",
            "properties": {
                "pricingTier": "[parameters('defenderForCloud')]"
            }
        }
    ],
    "outputs": {
        "keyVaultName": {
            "type": "string",
            "value": "[parameters('keyVaultName')]"
        },
        "vnetName": {
            "type": "string",
            "value": "[parameters('vnetName')]"
        },
        "vpnGateway": {
            "type": "string",
            "value": "[parameters('vpnGateway')]"
        },
        "dnsZone": {
            "type": "string",
            "value": "[parameters('dnsZone')]"
        },
        "nsgName": {
            "type": "string",
            "value": "[parameters('nsgName')]"
        },
        "logAnalyticsWorkspaceName": {
            "type": "string",
            "value": "[parameters('logAnalyticsWorkspaceName')]"
        },
        "storageAccountName": {
            "type": "string",
            "value": "[parameters('storageAccountName')]"
        },
        "recoveryServicesVaultName": {
            "type": "string",
            "value": "[parameters('recoveryServicesVaultName')]"
        },
        "defenderForCloud": {
            "type": "string",
            "value": "[parameters('defenderForCloud')]"
        }
    }
}
